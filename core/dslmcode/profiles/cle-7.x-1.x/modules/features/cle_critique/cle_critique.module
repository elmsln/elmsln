/**
 * Helper function to determine if a user account is the author
 * of a submission.
 * @param  $submission    Node object or node id of the submission.
 * @param  $account       Optionally specify which account to check.
 * @return boolean        TRUE/FALSE
 */
function _cle_critique_user_is_submission_author($submission, $account = NULL) {
  $return = FALSE;

  // if there is no account specified then get the
  // current logged in user
  if (!$account) {
    global $user;
    $account = $user;
  }
  // make sure the submission is loaded
  $submission = (!is_object($submission) ? node_load($submission) : $submission);
  // make sure account isn't the author of the submission
  if ($submission->uid == $account->uid) {
    // if the account is the author of the submission then return false and
    // exit
    $return =  TRUE;
  }

  return $return;
}
