/**
 * Implements hook_entity_view().
 */
function cle_critique_entity_view($entity, $type, $view_mode, $langcode) {
  if (isset($entity->type)) {
    // Extra fields
    $extra_fields = field_info_extra_fields($type, $entity->type, 'display');
    // Check the field is displayed for the current view_mode
    $field_name = 'cle_critique_submission';
    if(!empty($extra_fields[$field_name]['display'][$view_mode]['visible'])) {
      // get the assignment of the submission
      $assignment_id = (isset($entity->field_assignment['und'][0]['target_id']) ? $entity->field_assignment['und'][0]['target_id'] : NULL);
      // find out if the user should has access to critique the submission
      if (_cle_critique_assignment_critique_access(array('submission' => $assignment_id))) {
        $entity->content[$field_name] = array(
          '#theme' => 'link',
          '#text' => t('Critique submission'),
          '#path' => '/cle/critique/critique-peer',
          '#options' => array(
            'attributes' => array('class' => array('waves-effect', 'waves-light', 'btn')),
            'query' => array('submission' => $entity->nid),
              //REQUIRED:
              'html' => FALSE,
          ),
        );
      }
    }
  }
}

/**
 * Implements hook_node_view().
 */
function cle_critique_node_view($node, $view_mode, $langcode) {
  if ($node->type == 'cle_critique') {
    $submission = node_load($node->field_cle_crit_sub_ref['und'][0]['target_id']);
    $assignment = node_load($submission->field_assignment['und'][0]['target_id']);
    // support for doubleblind
    if (isset($assignment->field_cle_crit_type) && $assignment->field_cle_crit_type['und'][0]['value'] == 'doubleblind') {
      drupal_set_title('Critique by classmate');
    }
  }
}

