/**
 * Implements hook_webcomponents_build_file_location_alter().
 */
function mooc_helper_webcomponents_build_file_location_alter(&$locations) {
  // figure out the app that should also be autoloaded into the build
  if (arg(0) == 'node' && is_numeric(arg(1)) && arg(2) == '' && _webcomponents_app_access(variable_get('mooc_app_element', 'mooc-content'))) {
    $app = webcomponents_app_load_app_definitions(variable_get('mooc_app_element', 'mooc-content'));
    // support dynamic app file loading
    if ($app['element']) {
      array_push($locations, $app['element']);
    }
  }
}

/**
 * Implements hook_haxcms_root_node_loader().
 */
function mooc_helper_haxcms_root_node_loader_alter(&$node) {
  // null node here implies that we hit a path to load HAXcms yet there was no obvious node context (like a home page hit)
  if ($node == NULL || $node == FALSE) {
    $node = _mooc_helper_active_outline();
    // ensure we don't hit the 1st page of a content outline as it's just for organizational purposes
    $next = book_next($node->book);
    // shift down to 1st page for an initial outline load only
    if ($next && $node->book['mlid'] == $next['plid']) {
      $node = node_load(str_replace('node/', '', $next['link_path']));
    }
  }
}

