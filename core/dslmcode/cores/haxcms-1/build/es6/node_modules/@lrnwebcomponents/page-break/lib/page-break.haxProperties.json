{
  "canScale": false,
  "canPosition": false,
  "canEditSource": false,
  "gizmo": {
    "title": "Page break",
    "description": "Define a visual split between pages which CMSs can use to create pages.",
    "icon": "editor:format-page-break",
    "color": "grey",
    "tags": ["Other"],
    "handles": [],
    "meta": {
      "author": "HAXTheWeb core team",
      "hidden": true
    }
  },
  "settings": {
    "configure": [
      {
        "property": "title",
        "title": "Title",
        "description": "Title seen in the theme / first heading",
        "inputMethod": "textfield"
      },
      {
        "property": "pageType",
        "title": "Type",
        "description": "Indicates page context to users visually",
        "inputMethod": "select",
        "options": {
          "": "-- none --",
          "content": "Content",
          "assessment": "Assessment",
          "quiz": "Quiz",
          "submission": "Submission",
          "lesson": "Lesson",
          "module": "Module",
          "task": "Task",
          "activity": "Activity",
          "project": "Project",
          "practice": "Practice",
          "unit": "Unit",
          "objectives": "Learning Objectives",
          "connection": "Connection",
          "knowledge": "Did You Know?",
          "strategy": "Learning Strategy",
          "discuss": "Discuss",
          "listen": "Listen",
          "make": "Make",
          "observe": "Observe",
          "present": "Present",
          "reading": "Reading",
          "reflect": "Reflect",
          "research": "Research",
          "watch": "Watch",
          "write": "Write"
        }
      },
      {
        "property": "tags",
        "title": "Tags",
        "description": "Comma separated list of tags",
        "inputMethod": "textfield"
      },
      {
        "property": "published",
        "title": "Published",
        "description": "Unpublished pages are not visible to end users",
        "inputMethod": "boolean"
      },
      {
        "property": "locked",
        "title": "Lock page",
        "description": "Lock / Unlock all elements in this page",
        "inputMethod": "boolean"
      }
    ],
    "advanced": [
      {
        "property": "slug",
        "title": "Path",
        "description": "URL slug related to this page",
        "inputMethod": "textfield"
      },
      {
        "property": "parent",
        "title": "Parent",
        "description": "Path of the parent page this page should sit under",
        "inputMethod": "textfield"
      },
      {
        "property": "order",
        "title": "Order",
        "description": "Order relative to other sibling pages",
        "inputMethod": "number"
      }
    ],
    "developer": [
      {
        "property": "developerTheme",
        "title": "Page theme",
        "description": "Change the theme JUST on this page. Know why you are doing this!",
        "inputMethod": "textfield"
      }
    ]
  },
  "saveOptions": {
    "unsetAttributes": ["t", "_hax-state", "element-visible"]
  },
  "demoSchema": [
    {
      "tag": "page-break",
      "content": "",
      "properties": {
        "published": true,
        "locked": false,
        "status": "new",
        "title": "New page",
        "data-hax-ray": "Page break"
      }
    }
  ]
}
