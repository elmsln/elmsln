        "title": "Source",
        "description": "Code to be presented in content area",
        "inputMethod": "code-editor"
      },
      {
        "property": "edit",
        "title": "Edit mode",
        "description": "Toggle between edit and preview mode for play list",
        "inputMethod": "boolean"
      },
      {
        "property": "navigation",
        "title": "Navigation",
        "description": "Show Forward and Backward navigation buttons",
        "inputMethod": "boolean"
      },
      {
        "property": "pagination",
        "title": "Pagination",
        "description": "Show pagination dots",
        "inputMethod": "boolean"
      },
      {
        "property": "orientation",
        "title": "Orientation",
        "description": "Orientation of the slides",
        "inputMethod": "select",
        "options": {
          "horizontal": "Horizontal",
          "vertical": "Vertical"
        }
      }
    ],
    "advanced": [
      {
        "property": "slide",
        "title": "Slide to start on",
        "description": "Slide the play list should focus on to start",
        "inputMethod": "number"
      },
      {
        "property": "aspectRatio",
        "title": "Aspect Ratio",
        "description": "Aspect ratio of the slides",
        "inputMethod": "select",
        "options": {
          "16:9": "16:9",
          "3:2": "3:2",
          "1:1": "1:1"
        }
      }
    ],
    "developer": []
  },
  "saveOptions": {
    "unsetAttributes": ["items", "edit"]
