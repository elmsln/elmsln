{
  "canScale": false,

  "canEditSource": false,
  "gizmo": {
    "title": "Vocab",
    "description": "Vocabulary term",
    "icon": "hax:vocab",
    "color": "red",
    "tags": ["Instructional", "definition", "term", "vocabulary", "glossary"],
    "handles": [
      {
        "type": "inline",
        "text": "term"
      }
    ],
    "meta": {
      "author": "HAXTheWeb core team",
      "inlineOnly": true
    }
  },
  "settings": {
    "inline": [
      {
        "property": "innerHTML",
        "title": "Term",
        "description": "Text selected in the editor for this vocabulary term.",
        "inputMethod": "textfield",
        "disabled": true
      },
      {
        "property": "information",
        "title": "Definition",
        "description": "The definitition to display when the term is clicked.",
        "inputMethod": "textarea",
        "required": true
      },
      {
        "property": "popoverMode",
        "title": "Popover",
        "description": "Display the definition in a popover instead of inline.",
        "inputMethod": "boolean"
      }
    ],
    "configure": [
      {
        "property": "term",
        "title": "Term",
        "inputMethod": "textfield",
        "icon": "editor:title",
        "required": true
      },
      {
        "property": "information",
        "title": "Definition",
        "description": "The definitition to display when the term is clicked.",
        "inputMethod": "textarea",
        "required": true
      },
      {
        "property": "popoverMode",
        "title": "Popover",
        "description": "Display the definition in a popover instead of inline.",
        "inputMethod": "boolean",
        "required": false
      }
    ],
    "advanced": [
      {
        "property": "links",
        "title": "Links",
        "description": "List of supplemental links associated with this term.",
        "inputMethod": "array",
        "itemLabel": "title",
        "hideReorder": false,
        "expanded": false,
        "hideDuplicate": true,
        "properties": [
          {
            "property": "title",
            "title": "Link title",
            "inputMethod": "textfield",
            "required": true
          },
          {
            "property": "href",
            "title": "URL",
            "inputMethod": "textfield",
            "required": true
          }
        ]
      }
    ]
  },
  "demoSchema": [
    {
      "tag": "vocab-term",
      "properties": {
        "term": "HAX Camp",
        "information": "An event dedicated to spreading web components knowledge person to person.",
        "popoverMode": true
      },
      "content": ""
    }
  ]
}
