{
  "canScale": false,

  "canEditSource": true,
  "editElement": "editMode",
  "type": "grid",
  "gizmo": {
    "title": "Table",
    "description": "Table based data for the web",
    "icon": "editor:border-all",
    "color": "purple",
    "tags": [
      "Instructional",
      "presentation",
      "table",
      "data",
      "layout",
      "grid",
      "csv",
      "spreadsheet",
      "excel"
    ],
    "handles": [],
    "meta": {
      "author": "HAXTheWeb core team",
      "outlineDesigner": true
    }
  },
  "settings": {
    "configure": [
      {
        "property": "bordered",
        "title": "Bordered",
        "inputMethod": "boolean"
      },
      {
        "property": "condensed",
        "title": "Condense Rows",
        "description": "Condenses row height",
        "inputMethod": "boolean"
      },
      {
        "property": "rowHeader",
        "title": "Row Header",
        "inputMethod": "boolean"
      },
      {
        "property": "striped",
        "title": "Striped Rows",
        "description": "Add shading to every other row",
        "inputMethod": "boolean"
      },
      {
        "property": "columnHeader",
        "title": "Column Header",
        "inputMethod": "boolean"
      },
      {
        "property": "columnStriped",
        "title": "Striped Columns",
        "description": "Add shading to every other column",
        "inputMethod": "boolean"
      },
      {
        "property": "footer",
        "title": "Footer",
        "inputMethod": "boolean"
      },
      {
        "property": "responsive",
        "title": "Responsive",
        "description": "Automatically adjusts table when viewed on small screens",
        "inputMethod": "boolean"
      }
    ],
    "advanced": [
      {
        "property": "dataCsv",
        "title": "CSV Data",
        "description": "Make a table from an uploaded CSV file",
        "inputMethod": "fileupload",
        "accepts": "csv"
      },
      {
        "property": "downloadable",
        "title": "Download Button",
        "description": "Adds a button to download the table",
        "inputMethod": "boolean"
      },
      {
        "property": "printable",
        "title": "Print Button",
        "description": "Adds a button to print just the table",
        "inputMethod": "boolean"
      },
      {
        "property": "condensed",
        "title": "Condense Rows",
        "description": "Condenses row height",
        "inputMethod": "boolean"
      },
      {
        "property": "numericStyles",
        "title": "Numeric Styling",
        "description": "Styling for numeric columns",
        "inputMethod": "boolean"
      },
      {
        "property": "sort",
        "title": "Sortable",
        "description": "Allows rows to be sorted by a column value",
        "inputMethod": "boolean"
      },
      {
        "property": "filter",
        "title": "Allow Filter",
        "description": "Allows data to be filtered by a column value",
        "inputMethod": "boolean"
      }
    ]
  },
  "saveOptions": {
    "unsetAttributes": [
      "__utils",
      "edit-mode",
      "editMode",
      "data",
      "config",
      "dataCsv",
      "data-csv"
    ]
  },
  "demoSchema": [
    {
      "tag": "editable-table",
      "content": "<table><tr><td>one</td><td>two</td></tr><tr><td>three</td><td>four</td></tr></table>",
      "properties": {
        "downloadable": true
      }
    }
  ]
}
