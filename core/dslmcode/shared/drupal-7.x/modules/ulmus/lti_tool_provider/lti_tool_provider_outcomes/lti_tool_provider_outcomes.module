 * @param boolean $reset
 *   Boolean option for reset.
 *
 * @return object
 *   The outcomes object.
 */
function lti_tool_provider_outcomes_load($id = NULL, $reset = FALSE) {
  $ids = (isset($id) ? array($id) : array());
  $obj = lti_tool_provider_outcomes_load_multiple($ids, $reset);
  return $obj ? reset($obj) : FALSE;
}

