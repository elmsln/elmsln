      'title' => 'Manage layout',
      'description' => 'Manage your views templates.',
      'page callback' => 'ds_extras_vd_manage',
      'file' => 'includes/ds_extras.vd.inc',
      'access arguments' => array('admin_display_suite'),
      'type' => MENU_LOCAL_TASK,
