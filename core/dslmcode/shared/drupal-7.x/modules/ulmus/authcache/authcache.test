    // strict mode is enabled.
    $this->resetTestVariables();
    $element = array(
      '#markup' => '',
    );
    authcache_element_suspect($element, t('Customized cancelation message'), TRUE);

    variable_set('authcache_test_record', TRUE);
    $output = render($element);
