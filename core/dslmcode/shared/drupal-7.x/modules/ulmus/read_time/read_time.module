 */
function read_time_read_time_criteria() {
  return array(
    'words' => 'read_time_calculate',
    'video' => 'read_time_calculate',
    'audio' => 'read_time_calculate',
    'img' => 'read_time_calculate',
    'svg' => 'read_time_calculate',
  );
