    'dark'   => 'darken-4',
    'light'  => 'lighten-4',
    'color' => '',
    'text' => '',
  );
  // statically cache future calls
  $map = &drupal_static(__FUNCTION__);
  if (!isset($map)) {
    $map = array(
      'mooc' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'blue',
        'text' => 'blue-text',
        'outline' => 'blue-outline',
      ),
      'cle' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'amber',
        'text' => 'amber-text',
        'outline' => 'amber-outline',
      ),
      'discuss' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'teal',
        'text' => 'teal-text',
        'outline' => 'teal-outline',
      ),
      'ulmus' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'grey',
        'text' => 'grey-text',
        'outline' => 'grey-outline',
      ),
      'editorial' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'cyan',
        'text' => 'cyan-text',
        'outline' => 'cyan-outline',
      ),
      'inbox' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'orange',
        'text' => 'orange-text',
        'outline' => 'orange-outline',
      ),
      'elmsmedia' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'red',
        'text' => 'red-text',
        'outline' => 'red-outline',
      ),
      'icor' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'yellow',
        'text' => 'yellow-text',
        'outline' => 'blue-outline',
      ),
      'cpr' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'deep-orange',
        'text' => 'deep-orange-text',
        'outline' => 'deep-orange-outline',
      ),
      'ecd' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'lime',
        'text' => 'lime-text',
        'outline' => 'lime-outline',
      ),
      'cis' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color' => 'pink',
        'text' => 'pink-text',
        'outline' => 'pink-outline',
      ),
      'lor' => array(
        'dark'   => 'darken-4',
        'light'  => 'lighten-4',
        'color'  => 'purple',
        'text'   => 'purple-text',
        'outline' => 'purple-outline',
      ),
      'lq' => array(
        'dark'   => 'darken-3',
        'light'  => 'lighten-3',
        'color' => 'light-green',
        'text' => 'light-green',
        'outline' => 'light-green-outline',
      ),
      'assessment' => array(
        'dark'   => 'darken-3',
        'light'  => 'lighten-3',
        'color' => 'light-blue',
