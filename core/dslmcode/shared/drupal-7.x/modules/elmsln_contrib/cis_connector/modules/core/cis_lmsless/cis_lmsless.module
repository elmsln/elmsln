/**
 * Implements hook_block_info().
 */
function cis_lmsless_block_info() {
  $blocks['cis_lmsless_user'] = array(
    'info' => t('CIS LMSless user'),
    'cache' => DRUPAL_CACHE_PER_USER,
  );
  $blocks['cis_lmsless_network'] = array(
    'info' => t('CIS LMSless network'),
    'cache' => DRUPAL_CACHE_PER_USER,
  );
  return $blocks;
