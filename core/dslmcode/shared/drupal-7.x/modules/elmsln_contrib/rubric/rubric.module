      )
    ),
    'rubric_level_range' => array(
      'variables' => array(
        'range' => array(),
        'field_name' => NULL
      ),
    ),
    'rubric_field_collection_level_title' => array(
      'variables' => array(
        'title' => NULL,
        'range' => NULL,
        'rubric_level_id' => NULL
      )
    ),
    'rubric_field_collection_level' => array(
      'variables' => array(
        'level' => NULL,
        'title' => NULL,
