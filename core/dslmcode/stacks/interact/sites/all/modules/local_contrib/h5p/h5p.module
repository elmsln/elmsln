 */
function h5p_init() {
  if (path_is_admin(current_path()) && empty($_POST) && user_access('access administration pages')) {
    $core = _h5p_get_instance('core');
    $core->validateLibrarySupport();
    _h5p_display_unsupported_libraries(arg(2) === 'h5p');
  }
}

