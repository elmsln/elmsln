  module_load_include('inc', 'print_mail', 'print_mail');

  $form_state['values'] = array(
    'path' => 'node/' . $node->nid,
    'cid' => NULL,
    'query' => NULL,
    'title' => $node->title,
    'fld_from_addr' => $from,
    'fld_from_name' => $from_name,
    'txt_to_addrs' => $to,
    'fld_subject' => $subject,
    'txt_message' => $message,
    'chk_teaser' => FALSE,
  );

  print_mail_form_submit(NULL, $form_state);
}
