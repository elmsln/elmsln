/**
 * Unpublish content
 *
 * @param object $node The node
 * @param object $context Edit or share
 */
function h5p_publish($node, $context) {
  global $user;

  // Redirect to registration if we're not registered yet
  $core = _h5p_get_instance('core');
  if (empty($core->h5pF->getOption('hub_secret', ''))) {
    if (user_access('administer site configuration')) {
      drupal_goto('admin/config/system/h5p/register');
    }
    return t('Your site is not yet registered with the content hub. Please contact an administrator.');
  }

  // Try loading existing info from the HUB
  try {
    $hubcontent = !empty($node->content_hub_id) ? $core->hubRetrieveContent($node->content_hub_id) : NULL;
  }
  catch (Exception $e) {
    $core->h5pF->setErrorMessage(!empty($e->errors) ? $e->errors : $e->getMessage());
    drupal_goto("node/{$node->nid}");
  }

  if (empty($node->content_hub_id)) {
    // Try to populate with license from content
    $license = isset($node->metadata['license']) ? $node->metadata['license'] : null;
    $licenseVersion = isset($license) && isset($node->metadata['licenseVersion'])
      ? $node->metadata['licenseVersion']
      : null;
    $showCopyrightWarning = false;

    // "Undisclosed" and "Copyright" licenses are not allowed on the content hub
    if ($license === 'U') {
      $license = null;
    }

    if ($license === 'C') {
      $license = null;
      $showCopyrightWarning = true;
    }

    $hubcontent = [
      'license' => $license,
      'licenseVersion' => $licenseVersion,
      'showCopyrightWarning' => $showCopyrightWarning,
    ];
  }

  // Add the sharing UI via JavaScripts and stylesheets
  $path = drupal_get_path('module', 'h5p');
  drupal_add_js("$path/library/js/h5p-hub-sharing.js");
  drupal_add_js("$path/scripts/h5p-hub-sharing-behavior.js");
  drupal_add_css("$path/library/styles/h5p-hub-sharing.css");
  drupal_add_css("$path/library/styles/h5p.css");

  $h5pcontent = h5p_get_content($node);
  $settings = array(
    'h5pContentHubPublish' => array(
      'token' => H5PCore::createToken('content_hub_token'),
      'publishURL' => url('h5p/share/' . $node->nid),
      'returnURL' => url("node/{$node->nid}"),
      'l10n' => $core->getLocalization(),
      'metadata' => json_decode($core->getUpdatedContentHubMetadataCache($user->language)),
      'title' => $h5pcontent['title'],
      'contentType' => H5PCore::libraryToString($h5pcontent['library']),
      'language' => !empty($user->language) ? $user->language : 'en',
      'hubContent' => $hubcontent,
      'context' => $context,
    ),
  );
  drupal_add_js($settings, 'setting');

  return '<div id="h5p-publish">Waiting for JavaScript...</div>';
}

/**
 * Unpublish content
 *
 * @param object $node The node
 */
function h5p_unpublish($node) {
  if (!$_POST) {
    return drupal_not_found();
  }

  if (H5PCore::validToken('content_hub_token', filter_input(INPUT_POST, '_token'))) {
    $core = _h5p_get_instance('core');
    $success = $core->hubUnpublishContent($node->content_hub_id);
    if ($success) {
      db_update('h5p_nodes')
        ->fields(array('shared' => 0))
        ->condition('content_id', $node->h5p_id)
        ->execute();
    }
  }
  else {
    $msg = $this->h5pF->t('Could not unpublish content because token was invalid. Please try again.');
    $this->h5pF->setErrorMessage($msg);
  }

  drupal_goto("node/{$node->nid}");
}

/**
 * Syncs content to the content hub
 *
 * @param object $node The node
 */
function h5p_sync_to_content_hub($node) {
  if (!$_POST) {
    return drupal_not_found();
  }
  if (H5PCore::validToken('content_hub_token', filter_input(INPUT_POST, '_token'))) {
    $core = _h5p_get_instance('core');
    $slug = !empty($node->h5p_slug) ? $node->h5p_slug . '-' : '';
    $h5pName = $slug . $node->h5p_id . '.h5p';
    $exportPath = _h5p_get_h5p_path() . '/exports/' . $h5pName;
    $exportUrl = file_create_url($exportPath);
    $hubId = $node->content_hub_id;
    $success = $core->hubSyncContent($hubId, $exportUrl);

    if ($success) {
      db_update('h5p_nodes')
        ->fields(array('synced' => H5PContentHubSyncStatus::WAITING))
        ->condition('content_id', $node->h5p_id)
        ->execute();
    }
  }
  else {
    $msg = $this->h5pF->t('Could not sync content because token was invalid. Please try again.');
    $this->h5pF->setErrorMessage($msg);
  }

  drupal_goto("node/{$node->nid}");
}

/**
 * Shows "waiting" tab when content is waiting to be processed by content hub
 *
 * @param $node
 *
 * @return bool Returns true if content is waiting to be processed
 */
function h5p_is_waiting_for_content_hub($node) {
  return $node->type === 'h5p_content' && intval($node->h5p_synced) === H5PContentHubSyncStatus::WAITING;
}

/**
 * Allows showing an empty MENU_LOCAL_TASK with waiting text...
 *
 * @param $node
 */
function h5p_wait_for_content_hub($node) {
  // This does nothing, it is just there to enable the waiting tab for the node
  drupal_goto("node/{$node->nid}");
}
