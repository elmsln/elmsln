/**
 * Function to multipart encode a uploaded file.
 *
 * @param string $name The form data name
 * @param string $filepath Path to file location (tmp_name)
 * @param string $filename Original file name (as posted)
 * @param string $mimetype Original mime type (as posted)
 *
 * @return string A string with the mimetype and the file.
 */
function h5p_multipart_enc_file($name, $filepath, $filename, $mimetype = 'application/octet-stream') {
  if (substr($filepath, 0, 1) === '@') {
    $filepath = substr($filepath, 1);
  }
  $data = "Content-Disposition: form-data; name=\"$name\"; filename=\"$filename\"\r\n"; // "file" key.
  $data .= "Content-Transfer-Encoding: binary\r\n";
  $data .= "Content-Type: $mimetype\r\n\r\n";

  // Add the encoded file
  $data .= file_get_contents($filepath) . "\r\n";
  return $data;
}

/**
 * Function to encode text data.
 *
 * @param string $name
 *   The name of the field.
 * @param string $value
 *   The value of the field.
 *
 * @return string
 *   A string encoded text data.
 */
function h5p_multipart_enc_text($name, $value){
  return "Content-Disposition: form-data; name=\"$name\"\r\n\r\n$value\r\n"; // TODO: Should we be using rawurlencode ?
}

/**
 * Handler for access to sharing content on the hub
 */
function h5p_share_access($node, $context = NULL) {
  global $user;

  if ($node->type !== 'h5p_content') {
    return FALSE; // Refuse access regardless of permissions
  }
  if ($context === 'publish' && $node->h5p_shared !== '0') {
    return FALSE; // Cannot Publish unless content is unpublished
  }
  if (($context === 'edit' || $context === 'unpublish' || $context === 'sync') && (empty($node->content_hub_id) || $node->h5p_shared !== '1')) {
    return FALSE; // Cannot Edit, Unpublish or Sync unless shared
  }
  if ($context === 'sync' && (intval($node->h5p_synced) === H5PContentHubSyncStatus::SYNCED || intval($node->h5p_synced) === H5PContentHubSyncStatus::WAITING)) {
    return FALSE; // Cannot sync if already synced or sync in progress
  }

  if (user_access('share any h5p content') || (user_access('share own h5p content') && $user->uid === $node->uid)) {
    return TRUE; // Access is granted due to right permissions
  }
  return FALSE; // Access was not granted
}

/**
 * Handler for access to sharing content on the hub
 */
function h5p_share($node) {
  if (!$_POST) { // Only support POST
    return drupal_not_found();
  }

  if (!H5PCore::validToken('content_hub_token', filter_input(INPUT_POST, '_token'))) {
    H5PCore::ajaxError(t('Invalid security token.'));
    return;
  }

  if ($node->h5p_synced === H5PContentHubSyncStatus::WAITING) {
    H5PCore::ajaxError(t('Content is being synced.'));
    return;
  }

  // Add POST fields to redirect to Hub
  $data = filter_input_array(INPUT_POST, array(
    'title' => FILTER_UNSAFE_RAW,
    'language' => FILTER_UNSAFE_RAW,
    'level' => FILTER_UNSAFE_RAW,
    'license' => FILTER_UNSAFE_RAW,
    'license_version' => FILTER_UNSAFE_RAW,
    'disciplines' => array(
      'filter'    => FILTER_UNSAFE_RAW,
      'flags'     => FILTER_REQUIRE_ARRAY,
    ),
    'keywords' => array(
      'filter'    => FILTER_UNSAFE_RAW,
      'flags'     => FILTER_REQUIRE_ARRAY,
    ),
    'summary' => FILTER_UNSAFE_RAW,
    'description' => FILTER_UNSAFE_RAW,
    'screenshot_alt_texts' => array(
      'filter' => FILTER_UNSAFE_RAW,
      'flags' => FILTER_REQUIRE_ARRAY,
    ),
    'remove_screenshots' => array(
      'filter' => FILTER_UNSAFE_RAW,
      'flags' => FILTER_REQUIRE_ARRAY,
    ),
    'remove_icon' => FILTER_UNSAFE_RAW,
    'age' => FILTER_UNSAFE_RAW,
  ));

  // Find H5P content for node
  $content = h5p_get_content($node);

  // Determine export path and file size
  $export = _h5p_get_h5p_path() . '/exports/' . ($content['slug'] ? $content['slug'] . '-' : '') . $content['id'] . '.h5p';
  $size = filesize($export);

  // Prepare additional data to POST to Hub
  $data['download_url'] = file_create_url($export);
  $data['size'] = empty($size) ? -1 : $size;

  // Add the icon and any screenshots
  $files = array(
    'icon' => !empty($_FILES['icon']) ? $_FILES['icon'] : NULL,
    'screenshots' => !empty($_FILES['screenshots']) ? $_FILES['screenshots'] : NULL,
  );

  $core = _h5p_get_instance('core');
  try {
    $isEdit = !empty($node->content_hub_id);
    $updateContent = intval($node->h5p_synced) === H5PContentHubSyncStatus::NOT_SYNCED && $isEdit;
    if ($updateContent) {
      // node has been edited since the last time it was published
      $data['resync'] = 1;
    }
    $result = $core->hubPublishContent($data, $files, $isEdit ? $node->content_hub_id : NULL);

    $fields = array(
      'shared' => 1, // Content is always shared after sharing or editing
    );
    if (!$isEdit) {
      $fields['content_hub_id'] = $result->content->id;
      // Sync will not happen on 'edit info', only for 'publish' or 'sync'.
      $fields['synced'] = H5PContentHubSyncStatus::WAITING;
    }
    else if ($updateContent) {
      $fields['synced'] = H5PContentHubSyncStatus::WAITING;
    }

    // Store the content hub id
    db_update('h5p_nodes')
      ->fields($fields)
      ->condition('content_id', h5p_get_content_id($node))
      ->execute();

    H5PCore::ajaxSuccess();
  }
  catch (Exception $e) {
    H5PCore::ajaxError(!empty($e->errors) ? $e->errors : $e->getMessage());
  }
}

